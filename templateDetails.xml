<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.5" type="template" method="upgrade">
	<name>OxfordSMS</name>
	<creationDate>March 2021</creationDate>
	<author>Ivan Komlev</author>
	<copyright>Copyright Â© 2020-2021 Ivan Komlev</copyright>
	<authorEmail>ivankomlev@gmail.com</authorEmail>
	<authorUrl>https://oxfordsms.com</authorUrl>
	<version>1.1.1</version>
	<description><![CDATA[Frameless resizable 3-column template created for the Oxford School Managment System using GitHub Primer theme.]]></description>
	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>includes</folder>
		<folder>js</folder>
		<folder>language</folder>
		<filename>index.php</filename>
		<filename>component.php</filename>
		<filename>templateDetails.xml</filename>
	</files>

	<positions>

	<position>top-bar</position>
	<position>top-menu</position>

	<position>profilemenu-1</position>

        <position>left-bar</position>
	<position>left-bar-loginbox</position>

	<position>right-bar</position>
	<position>footer</position>
	</positions>

	<languages folder="language">
		<language tag="en-GB">en-GB/tpl_oxfordsms.ini</language>
		<language tag="en-GB">en-GB/tpl_oxfordsms.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="advanced">
								
				<field 
					name="leftSideBG" 
					type="color" 
					label="TPL_OXFORDSMS_LEFTSIDEBGCOLOR_LABEL"
					description="TPL_OXFORDSMS_LEFTSIDEBGCOLOR_DESC" 
					class="" 
					default="#ffffff"
				/>

				<field 
					name="logoFile" 
					type="media" 
					label="TPL_OXFORDSMS_LOGO_LABEL"
					description="TPL_OXFORDSMS_LOGO_DESC" 
					class="" 
					default=""
				/>

				<field 
					name="freshworksid" 
					type="text" 
					label="FreshWorks ID"
					description="FreshWorks Widget ID" 
					class="" 
					default=""
				/>

				<field 
					name="smalllogo" 
					type="media" 
					label="TPL_OXFORDSMS_SMALL_LOGO_LABEL"
					description="TPL_OXFORDSMS_SMALL_LOGO_DESC" 
					class="" 
					default="templates/oxofrdsms/images/oxfordsms-24.png"
				/>

				<field 
					name="copyright" 
					type="text" 
					label="Copyright text"
					class="" 
					default=""
				/>

			</fieldset>
			
			<fieldset name="NavigationBar">
				<field 
					name="topMenuFontColor" 
					type="color" 
					label="TPL_OXFORDSMS_FONTCOLOR_LABEL"
					description="TPL_OXFORDSMS_FONTCOLOR_DESC" 
					class="" 
					default="#FFFFFF"
				/>
				<field 
					name="topMenuBGColor" 
					type="color" 
					label="TPL_OXFORDSMS_BGCOLOR_LABEL"
					description="TPL_OXFORDSMS_BGCOLOR_DESC" 
					class="" 
					default="#103157"
				/>

				<field 
					name="topMenuHighlightBar" 
					type="color" 
					label="TPL_OXFORDSMS_BARCOLOR_LABEL"
					description="TPL_OXFORDSMS_BARCOLOR_DESC" 
					class="" 
					default="#a28f38"
				/>

				<field 
					name="topMenuSubFontColor" 
					type="color" 
					label="TPL_OXFORDSMS_SUBFONTCOLOR_LABEL"
					description="TPL_OXFORDSMS_SUBFONTCOLOR_DESC" 
					class="" 
					default="#4677b0"
				/>

				<field 
					name="topMenuSubFontColorHover" 
					type="color" 
					label="TPL_OXFORDSMS_SUBFONTHOVERCOLOR_LABEL"
					description="TPL_OXFORDSMS_SUBFONTHOVERCOLOR_DESC" 
					class="" 
					default="#103157"
				/>

				<field 
					name="topMenuSubBar" 
					type="color" 
					label="TPL_OXFORDSMS_SUBBARCOLOR_LABEL"
					description="TPL_OXFORDSMS_SUBBARCOLOR_DESC" 
					class="" 
					default="#9f2828"
				/>
				
			</fieldset>
			
			<fieldset name="Buttons">
			
				<field 
					name="ButtonColor" 
					type="color" 
					label="Button Color"
					class="" 
					default="#055dc0"
				/>
				
				<field 
					name="primaryButtonColor" 
					type="color" 
					label="Primary Button Color"
					class="" 
					default="#0366d6"
				/>
				
				<field 
					name="primaryButtonHoverColor" 
					type="color" 
					label="Primary Button Hover Color"
					class="" 
					default="#0366d6"
				/>
				
				<field 
					name="successButtonColor" 
					type="color" 
					label="Success Button Color"
					class="" 
					default="#92d782"
				/>
				
				<field 
					name="successButtonHoverColor" 
					type="color" 
					label="Success Button Hover Color"
					class="" 
					default="#25970a"
				/>
			</fieldset>

			<!--Start Custom Code Tab-->
			<fieldset name="custom_code">
		                <!--<field type="group" title="TPL_OXFORDSMS_CUSTOM_CODE" />-->
                		<field name="before_head" type="textarea" rows="5" label="TPL_OXFORDSMS_BEFORE_HEAD" description="TPL_OXFORDSMS_BEFORE_HEAD_DESC" filter="raw" />
		                <field name="before_body" type="textarea" rows="5" label="TPL_OXFORDSMS_BEFORE_BODY" description="TPL_OXFORDSMS_BEFORE_BODY_DESC" filter="raw" />
                		<field name="custom_css" type="textarea" rows="5" label="TPL_OXFORDSMS_CUSTOM_CSS" description="TPL_OXFORDSMS_CUSTOM_CSS_DESC" filter="raw" />
                		<field name="custom_js" type="textarea" rows="5" label="TPL_OXFORDSMS_CUSTOM_JS" description="TPL_OXFORDSMS_CUSTOM_JS_DESC" filter="raw" />
		        </fieldset>
		</fields>
	</config>
</extension>
