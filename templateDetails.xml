<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.5" type="template" method="upgrade">
	<name>OxfordSMS</name>
	<creationDate>October 2020</creationDate>
	<author>Ivan Komlev</author>
	<copyright>Copyright Â© 2020 Ivan Komlev</copyright>
	<authorEmail>ivankomlev@oxford.edu.pa</authorEmail>
	<authorUrl>https://oxfordsms.com</authorUrl>
	<version>1.0.5</version>
	<description><![CDATA[Frameless resizable 3-column template created for the Oxford School Managment System using GitHub Primer theme.]]></description>
	<files>
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
		<folder>includes</folder>
		<folder>language</folder>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
	</files>

	<positions>

	<position>top-bar</position>
	<position>top-menu</position>

	<position>profilemenu-1</position>

        <position>left-bar</position>
	<position>right-bar</position>
	<position>footer</position>
	</positions>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_oxfordsms.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_oxfordsms.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field 
					name="topMenuFontColor" 
					type="color" 
					label="TPL_OXFORDSMS_FONTCOLOR_LABEL"
					description="TPL_OXFORDSMS_FONTCOLOR_DESC" 
					class="" 
					default="#FFFFFF"
				/>
				<field 
					name="topMenuBGColor" 
					type="color" 
					label="TPL_OXFORDSMS_BGCOLOR_LABEL"
					description="TPL_OXFORDSMS_BGCOLOR_DESC" 
					class="" 
					default="#103157"
				/>

				<field 
					name="topMenuHighlightBar" 
					type="color" 
					label="TPL_OXFORDSMS_BARCOLOR_LABEL"
					description="TPL_OXFORDSMS_BARCOLOR_DESC" 
					class="" 
					default="#a28f38"
				/>

				<field 
					name="topMenuSubFontColor" 
					type="color" 
					label="TPL_OXFORDSMS_SUBFONTCOLOR_LABEL"
					description="TPL_OXFORDSMS_SUBFONTCOLOR_DESC" 
					class="" 
					default="#4677b0"
				/>

				<field 
					name="topMenuSubFontColorHover" 
					type="color" 
					label="TPL_OXFORDSMS_SUBFONTHOVERCOLOR_LABEL"
					description="TPL_OXFORDSMS_SUBFONTHOVERCOLOR_DESC" 
					class="" 
					default="#103157"
				/>

				<field 
					name="topMenuSubBar" 
					type="color" 
					label="TPL_OXFORDSMS_SUBBARCOLOR_LABEL"
					description="TPL_OXFORDSMS_SUBBARCOLOR_DESC" 
					class="" 
					default="#9f2828"
				/>

				<field 
					name="logoFile" 
					type="media" 
					label="TPL_OXFORDSMS_LOGO_LABEL"
					description="TPL_OXFORDSMS_LOGO_DESC" 
					class="" 
					default=""
				/>

				<field 
					name="freshworksid" 
					type="text" 
					label="FreshWorks ID"
					description="FreshWorks Widget ID" 
					class="" 
					default=""
				/>

			</fieldset>
		</fields>
	</config>
</extension>
